<div class="panel panel-default xiconfPrograms-stepPanel xiconfPrograms-stepPanel-fn">
  <div class="panel-heading"><%- stepIndex + 1 %>. <%- t('programs', 'step:fn') %></div>
  <div class="panel-details">
    <div class="props first">
      <div class="prop">
        <div class="prop-name"><%- t('programs', 'PROPERTY:startTime') %></div>
        <div class="prop-value"><%= time.toString(step.startTime) %></div>
      </div>
      <div class="prop">
        <div class="prop-name"><%- t('programs', 'PROPERTY:duration') %></div>
        <div class="prop-value"><%= time.toString(step.duration) %></div>
      </div>
      <div class="prop">
        <div class="prop-name"><%- t('programs', 'PROPERTY:voltage') %></div>
        <div class="prop-value"><%= step.voltage.toLocaleString() %></div>
      </div>
      <div class="prop">
        <% if (step.powerMin === step.powerMax && step.powerReq === step.powerMin) { %>
        <div class="prop-name"><%- t('programs', 'PROPERTY:power:req') %></div>
        <div class="prop-value"><%= step.powerReq %></div>
        <% } else { %>
        <div class="prop-name"><%- t('programs', 'PROPERTY:power') %></div>
        <div class="prop-value"><%= step.powerMin %> ≤ <%= step.powerReq %> ≤ <%= step.powerMax %></div>
        <% } %>
      </div>
    </div>
  </div>
</div>
