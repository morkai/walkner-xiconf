<input type="hidden" name="steps[0].type" value="pe">
<div class="checkbox">
  <label class="control-label">
    <input type="checkbox" name="steps[0].enabled" value="1">
    <%- t('programs', 'step:pe') %>
  </label>
</div>
<div id="<%- idPrefix %>-panel-pe" class="panel panel-default programs-form-pe">
  <div class="panel-body">
    <div class="row">
      <div class="form-group col-md-3">
        <label for="<%- idPrefix %>-pe-startTime" class="control-label is-required"><%- t('programs', 'PROPERTY:startTime') %></label>
        <input id="<%- idPrefix %>-pe-startTime" class="form-control programs-form-duration" type="text" name="steps[0].startTime" required>
      </div>
      <div class="form-group col-md-3">
        <label for="<%- idPrefix %>-pe-duration" class="control-label is-required"><%- t('programs', 'PROPERTY:duration') %></label>
        <input id="<%- idPrefix %>-pe-duration" class="form-control programs-form-duration" type="text" name="steps[0].duration" required>
      </div>
      <div class="form-group col-md-3">
        <label for="<%- idPrefix %>-pe-totalTime" class="control-label"><%- t('programs', 'PROPERTY:totalTime') %></label>
        <p class="form-control-static programs-form-totalTime">0s</p>
      </div>
    </div>
    <div class="row">
      <div class="form-group col-md-3">
        <label for="<%- idPrefix %>-pe-voltage" class="control-label is-required"><%- t('programs', 'PROPERTY:voltage') %></label>
        <input id="<%- idPrefix %>-pe-voltage" class="form-control" type="number" name="steps[0].voltage" min="0.1" max="99.9" step="0.1" required>
      </div>
    </div>
    <div class="row">
      <div class="form-group col-md-3">
        <label for="<%- idPrefix %>-pe-resistanceMax" class="control-label is-required"><%- t('programs', 'PROPERTY:resistance:max') %></label>
        <input id="<%- idPrefix %>-pe-resistanceMax" class="form-control" type="number" name="steps[0].resistanceMax" min="0.001" step="0.001" required>
      </div>
    </div>
  </div>
</div>
