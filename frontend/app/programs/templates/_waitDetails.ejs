<div class="panel panel-default xiconfPrograms-stepPanel xiconfPrograms-stepPanel-wait">
  <div class="panel-heading"><%- stepIndex + 1 %>. <%- t('programs', 'step:wait') %></div>
  <div class="panel-details">
    <div class="props first">
      <div class="prop">
        <div class="prop-name"><%- t('programs', 'PROPERTY:waitKind') %></div>
        <div class="prop-value">
          <%- t('programs', 'PROPERTY:waitKind:' + step.kind) %>
          <% if (step.kind === 'auto') { %>
          <%= time.toString(step.duration) %>
          <%} %>
        </div>
      </div>
      <div class="prop">
        <div class="prop-name"><%- t('programs', 'PROPERTY:voltage') %></div>
        <div class="prop-value"><%= step.voltage.toLocaleString() %></div>
      </div>
    </div>
  </div>
</div>
