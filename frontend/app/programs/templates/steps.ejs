<div class="xiconfPrograms-steps">
  <% steps.forEach(function(step) { %>
  <div class="xiconfPrograms-step <%- step.stepClassName %>" data-type="<%- step.type %>" data-index="<%- step.index %>">
    <div class="xiconfPrograms-step-status">
      <% if (step.unit !== null) { %>
      <div class="xiconfPrograms-step-unit xiconfPrograms-step-cornerBox"><%- step.unit %></div>
      <% } %>
      <% if (step.minValue !== null) { %>
      <div class="xiconfPrograms-step-minValue xiconfPrograms-step-cornerBox"><%- step.minValue %></div>
      <% } %>
      <% if (step.maxValue !== null) { %>
      <div class="xiconfPrograms-step-maxValue xiconfPrograms-step-cornerBox"><%- step.maxValue %></div>
      <% } %>
      <% if (step.value !== null) { %>
      <div class="xiconfPrograms-step-value"><%- step.value %></div>
      <% } %>
    </div>
    <div class="xiconfPrograms-step-nameAndProgress">
      <h3 class="xiconfPrograms-step-name"><%- t('programs', 'step:' + step.type) %></h3>
      <div class="xiconfPrograms-step-details">
        <% if (step.totalTime) { %>
        <span class="xiconfPrograms-step-details-prop">T=<%- step.totalTime %></span>
        <% } %>
        <% if (step.voltage) { %>
        <span class="xiconfPrograms-step-details-prop">U=<%- step.voltage %>V</span>
        <% } %>
        <% if (step.resistanceMax) { %>
        <span class="xiconfPrograms-step-details-prop">R<sub>max</sub>=<%- step.resistanceMax %>Î©</span>
        <% } %>
        <% if (step.powerReq) { %>
        <span class="xiconfPrograms-step-details-prop">P<sub>req</sub>=<%- step.powerReq %>W</span>
        <% } %>
        <% if (step.powerMin) { %>
        <span class="xiconfPrograms-step-details-prop">P<sub>min</sub>=<%- step.powerMin %>W</span>
        <% } %>
        <% if (step.powerMax) { %>
        <span class="xiconfPrograms-step-details-prop">P<sub>max</sub>=<%- step.powerMax %>W</span>
        <% } %>
      </div>
      <div class="progress">
        <div class="progress-bar <%- step.progressBarClassName %>" style="width: <%- step.progressBarWidth %>"></div>
      </div>
    </div>
  </div>
  <% }) %>
</div>
