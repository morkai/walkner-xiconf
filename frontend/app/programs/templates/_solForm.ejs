<input type="hidden" name="steps[1].type" value="sol">
<div class="checkbox">
  <label class="control-label">
    <input type="checkbox" name="steps[1].enabled" value="1">
    <%- t('programs', 'step:sol') %>
  </label>
</div>
<div id="<%- idPrefix %>-panel-sol" class="panel panel-default programs-form-sol">
  <div class="panel-body row">
    <div class="form-group col-md-3">
      <label for="<%- idPrefix %>-sol-voltage" class="control-label is-required"><%- t('programs', 'PROPERTY:voltage') %></label>
      <input id="<%- idPrefix %>-sol-voltage" class="form-control" type="number" name="steps[1].voltage" min="0.1" max="99.9" step="0.1" required>
    </div>
  </div>
</div>
