<div class="panel panel-default xiconfPrograms-stepPanel xiconfPrograms-stepPanel-wait">
  <div class="panel-heading is-with-actions">
    <span class="xiconfPrograms-form-stepNo">0.</span> <%- t('programs', 'step:wait') %>
    <% include _stepPanelActions.ejs %>
  </div>
  <div class="panel-body">
    <div class="row">
      <div class="form-group col-md-3">
        <label for="<%- idPrefix %>-duration" class="control-label"><%- t('programs', 'PROPERTY:waitKind') %></label>
        <div class="radio">
          <label>
            <input type="radio" class="programs-form-waitKind" name="steps[<%- stepIndex %>].kind" value="manual"> <%- t('programs', 'PROPERTY:waitKind:manual') %>
          </label>
        </div>
        <div class="radio">
          <label>
            <input type="radio" class="programs-form-waitKind" name="steps[<%- stepIndex %>].kind" value="auto" checked> <%- t('programs', 'PROPERTY:waitKind:auto') %>
          </label>
        </div>
        <input id="<%- idPrefix %>-duration" class="form-control xiconfPrograms-form-duration xiconfPrograms-form-waitDuration" type="text" name="steps[<%- stepIndex %>].duration" value="2s" required>
      </div>
    </div>
    <div class="row">
      <div class="form-group col-md-3">
        <label for="<%- idPrefix %>-voltage" class="control-label is-required"><%- t('programs', 'PROPERTY:voltage') %></label>
        <input id="<%- idPrefix %>-voltage" class="form-control" type="number" name="steps[<%- stepIndex %>].voltage" min="0" max="99.9" step="0.1" value="0" required>
      </div>
    </div>
  </div>
  <input type="hidden" name="steps[<%- stepIndex %>].type" value="wait">
</div>
