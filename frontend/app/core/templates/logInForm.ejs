<form class="logInForm" method="post" action="/login">
  <div class="form-group">
    <input name="login" type="text" class="form-control input-lg" placeholder="<%- t('core', 'LOG_IN_FORM:LABEL:LOGIN') %>" autofocus>
  </div>
  <div class="form-group">
    <input name="password" type="password" class="form-control input-lg" placeholder="<%- t('core', 'LOG_IN_FORM:LABEL:PASSWORD') %>">
  </div>
  <button class="btn btn-block btn-lg btn-primary logInForm-submit" type="submit">
    <i class="fa fa-spinner fa-spin logInForm-submit-spinner"></i>
    <span class="logInForm-submit-label"><%- t('core', 'LOG_IN_FORM:LABEL:SUBMIT') %></span>
  </button>
</form>
