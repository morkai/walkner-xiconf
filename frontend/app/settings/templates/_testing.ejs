<div id="<%- idPrefix %>-testing" class="panel-body settings-hasRowLast">
  <div class="form-group">
    <label for="<%- idPrefix %>-testingEnabled" class="control-label"><%- t('settings', 'setting:testingEnabled') %></label>
    <div>
      <label class="radio-inline">
        <input id="<%- idPrefix %>-testingEnabled" name="testingEnabled" type="radio" value="1" required> <%- t('settings', 'setting:testingEnabled:on') %>
      </label>
      <label class="radio-inline">
        <input name="testingEnabled" type="radio" value="0" required> <%- t('settings', 'setting:testingEnabled:off') %>
      </label>
    </div>
  </div>
  <div class="row">
    <div class="form-group col-md-3">
      <label for="<%- idPrefix %>-testingComPattern" class="control-label"><%- t('settings', 'setting:testingComPattern') %></label>
      <input id="<%- idPrefix %>-testingComPattern" class="form-control" name="testingComPattern" type="text" required>
    </div>
    <div class="form-group col-md-3">
      <label for="<%- idPrefix %>-testingComAddress" class="control-label"><%- t('settings', 'setting:testingComAddress') %></label>
      <input id="<%- idPrefix %>-testingComAddress" class="form-control" name="testingComAddress" type="number" required min="0" max="255">
    </div>
    <div class="form-group col-md-3">
      <label for="<%- idPrefix %>-testingComTimeout" class="control-label"><%- t('settings', 'setting:testingComTimeout') %></label>
      <input id="<%- idPrefix %>-testingComTimeout" class="form-control" name="testingComTimeout" type="number" required min="100" max="5000">
    </div>
    <div class="form-group col-md-3">
      <label for="<%- idPrefix %>-testingCurrent" class="control-label"><%- t('settings', 'setting:testingCurrent') %></label>
      <input id="<%- idPrefix %>-testingCurrent" class="form-control" name="testingCurrent" type="number" required min="0.01" max="10" step="0.01">
    </div>
  </div>
  <div class="row">
    <div class="form-group col-md-3">
      <label for="<%- idPrefix %>-testingModbusEnabled" class="control-label"><%- t('settings', 'setting:testingModbusEnabled') %></label>
      <div>
        <label class="radio-inline">
          <input id="<%- idPrefix %>-testingModbusEnabled" name="testingModbusEnabled" type="radio" value="1" required> <%- t('settings', 'setting:testingModbusEnabled:on') %>
        </label>
        <label class="radio-inline">
          <input name="testingModbusEnabled" type="radio" value="0" required> <%- t('settings', 'setting:testingModbusEnabled:off') %>
        </label>
      </div>
    </div>
    <div class="form-group col-md-3">
      <label for="<%- idPrefix %>-testingModbusHost" class="control-label"><%- t('settings', 'setting:testingModbusHost') %></label>
      <input id="<%- idPrefix %>-testingModbusHost" class="form-control" name="testingModbusHost" type="text" required pattern="[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}">
    </div>
    <div class="form-group col-md-3">
      <label for="<%- idPrefix %>-testingModbusPort" class="control-label"><%- t('settings', 'setting:testingModbusPort') %></label>
      <input id="<%- idPrefix %>-testingModbusPort" class="form-control" name="testingModbusPort" type="number" required min="1" max="65535">
    </div>
  </div>
</div>
