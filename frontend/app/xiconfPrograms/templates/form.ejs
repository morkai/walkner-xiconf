<form class="xiconfPrograms-form" method="post" action="<%- formAction %>">
  <input type="hidden" name="_method" value="<%- formMethod %>">
  <div class="panel panel-primary">
    <div class="panel-heading"><%- panelTitleText %></div>
    <div class="panel-body">
      <div class="form-group">
        <label for="<%- idPrefix %>-name" class="control-label is-required"><%- t('xiconfPrograms', 'PROPERTY:name') %></label>
        <input id="<%- idPrefix %>-name" class="form-control" type="text" name="name" maxlength="100" required autofocus>
      </div>
      <div class="form-group">
        <label for="<%- idPrefix %>-type" class="control-label is-required"><%- t('xiconfPrograms', 'PROPERTY:type') %></label>
        <% programTypes.forEach(function(programType) { %>
        <div class="radio">
          <label>
            <input id="<%- idPrefix %>-type-<%- programType %>" name="type" type="radio" value="<%- programType %>" required>
            <%- t('xiconfPrograms', 'type:' + programType) %>
          </label>
        </div>
        <% }) %>
      </div>
      <div id="<%- idPrefix %>-steps" class="xiconfPrograms-form-steps"></div>
      <div class="form-group">
        <select id="<%- idPrefix %>-stepType" class="form-control xiconfPrograms-form-stepType">
          <option value="" disabled selected><%- t('xiconfPrograms', 'form:steps:placeholder') %></option>
          <% stepTypes.forEach(function(stepType) { %>
          <option value="<%- stepType %>"><%- t('xiconfPrograms', 'step:' + stepType) %></option>
          <% }) %>
        </select>
        <button id="<%- idPrefix %>-addStep" class="btn btn-default" type="button"><i class="fa fa-plus"></i><span><%- t('xiconfPrograms', 'form:steps:add') %></span></button>
      </div>
    </div>
    <div class="panel-footer">
      <button type="submit" class="btn btn-primary"><%- formActionText %></button>
    </div>
  </div>
</form>
