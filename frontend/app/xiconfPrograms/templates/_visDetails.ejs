<div class="panel panel-default xiconfPrograms-stepPanel xiconfPrograms-stepPanel-vis">
  <div class="panel-heading"><%- stepIndex + 1 %>. <%- t('xiconfPrograms', 'step:vis') %></div>
  <div class="panel-details">
    <div class="props first">
      <div class="prop">
        <div class="prop-name"><%- t('xiconfPrograms', 'PROPERTY:label') %></div>
        <div class="prop-value"><%= step.label %></div>
      </div>
      <div class="prop">
        <div class="prop-name"><%- t('xiconfPrograms', 'glp2:vis:duration') %></div>
        <div class="prop-value"><%= time.toString(step.duration, false, true) %></div>
      </div>
      <div class="prop">
        <div class="prop-name"><%- t('xiconfPrograms', 'glp2:vis:maxDuration') %></div>
        <div class="prop-value"><%= time.toString(step.maxDuration, false, true) %></div>
      </div>
      <div class="prop">
        <div class="prop-name"><%- t('xiconfPrograms', 'glp2:vis:mode') %></div>
        <div class="prop-value"><%- t('xiconfPrograms', 'glp2:vis:mode:' + step.mode) %></div>
      </div>
      <div class="prop">
        <div class="prop-name"><%- t('xiconfPrograms', 'glp2:vis:goInput') %></div>
        <div class="prop-value"><%- step.goInput ? t('xiconfPrograms', 'glp2:input:' + step.goInput) : '-' %></div>
      </div>
      <div class="prop">
        <div class="prop-name"><%- t('xiconfPrograms', 'glp2:vis:noGoInput') %></div>
        <div class="prop-value"><%- step.noGoInput ? t('xiconfPrograms', 'glp2:input:' + step.noGoInput) : '-' %></div>
      </div>
    </div>
  </div>
</div>
